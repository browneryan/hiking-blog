{{#if updateCommentForm}}
    <div class="container">
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" class="form-control" placeholder=comment.author}}
        </div>

        <div class="form-group">
          <label for="comment">Comment</label>
          {{input value=commentText id="comment" class="form-control"}}
        </div>

        <button class="waves-effect waves-green btn saveNewComment"{{action 'update' comment}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-green btn newCommentForm"{{action 'updateCommentForm'}}>Edit</button>
{{/if}}
