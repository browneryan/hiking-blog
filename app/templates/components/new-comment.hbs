{{#if addNewComment}}
  <h1>New Comment</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="comment">Comment</label>
          {{input value=comment id="comment" class="form-control"}}
        </div>

        <button class="waves-effect waves-green btn saveNewComment"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-green btn newCommentForm"{{action 'commentFormShow'}}>New Comment</button>
{{/if}}
