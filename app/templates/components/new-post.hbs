{{#if addNewPost}}
  <h1>New Post</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" class="form-control"}}
        </div>

        <button class="waves-effect waves-green btn saveNewPost"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-green btn newPostForm"{{action 'postFormShow'}}>New Post</button>
{{/if}}
